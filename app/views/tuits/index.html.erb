          <a href="#" class="card-link">Retweet</a>
        </div>
      </div>
    </aside>
  </div>
</div>
<%# Show pagy only if there is no query text %>
<div class="d-flex justify-content-center">
  <% if params[:query_text].blank? %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end %>
</div>
